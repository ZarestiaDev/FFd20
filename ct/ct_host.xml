				<center />
			</label_ct>
			<label_ct name="label_init">
				<anchored position="insidetopright" offset="353,38" width="30" />
				<static textres="init" />
				<center />
			</label_ct>
			<label_ct name="label_hp">
				<anchored position="insidetopright" offset="308,38" width="30" />
