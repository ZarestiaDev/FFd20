<root>
	<windowclass name="charsheet_notes">
		<sheetdata>
			<generic_background name="appearanceframe">
				<bounds>15,20,-29,190</bounds>
			</generic_background>
			<label_frametop>
				<anchored to="appearanceframe" />
				<static textres="char_label_appearance" />
			</label_frametop>

			<simpleft name="appearance">
				<anchored to="appearanceframe">
					<top offset="30" />
					<left offset="15" />
					<right offset="-20" />
					<bottom offset="-15" />
				</anchored>
				<frame mergerule="replace" name="fielddark" offset="7,5,7,5" hidereadonly="true" />
				<stateframe>
					<keyedit name="fieldfocus" offset="7,5,7,5" />
					<hover name="fieldfocus" offset="7,5,7,5" hidereadonly="true" />
					<drophilight name="fieldfocus" offset="7,5,7,5" hidereadonly="true" />
				</stateframe>
			</simpleft>
			<scrollbar name="appearance_scrollbar">
				<anchored to="appearance" />
				<target>appearance</target>
			</scrollbar>

			<generic_background name="notesframe">
				<bounds>15,235,-29,-2</bounds>
			</generic_background>
			<label_frametop>
				<anchored to="notesframe" />
				<static textres="char_label_notes" />
			</label_frametop>
			<simpleft name="notes">
				<anchored to="notesframe">
					<top offset="30" />
					<left offset="15" />
					<right offset="-20" />
					<bottom offset="-15" />
				</anchored>
				<frame mergerule="replace" name="fielddark" offset="7,5,7,5" hidereadonly="true" />
				<stateframe>
					<keyedit name="fieldfocus" offset="7,5,7,5" />
					<hover name="fieldfocus" offset="7,5,7,5" hidereadonly="true" />
					<drophilight name="fieldfocus" offset="7,5,7,5" hidereadonly="true" />
				</stateframe>
			</simpleft>
			<scrollbar name="notes_scrollbar">
				<anchored to="notes" />
				<target>notes</target>
			</scrollbar>
		</sheetdata>
	</windowclass>
</root>