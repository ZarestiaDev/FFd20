<root>
	<windowclass name="charsheet">
		<frame>charsheet</frame>
		<placement>
			<size width="525" height="568" />
		</placement>
		<sizelimits>
            <minimum width="525" height="568" />
			<dynamic />
        </sizelimits>
		<softclose />
		<nodelete />
		<playercontrol />
		<export>character</export>
		<script file="campaign/scripts/char.lua" />
		<sheetdata>
			<genericcontrol name="portraitbase">
				<bounds>21,25,100,100</bounds>
				<icon>charlist_base</icon>
				<disabled />
			</genericcontrol>
			<portrait_char name="portrait">
				<bounds>21,25,100,100</bounds>
			</portrait_char>

			<token_char name="token">
				<bounds>-86,30,40,40</bounds>
			</token_char>
			
			<generic_background name="overviewframe">
				<bounds>125,40,-90,30</bounds>
			</generic_background>
			<string_field name="test">
				<anchored to="overviewframe" />
				<labelres>char_label_name</labelres>
			</string_field>
			
			<!-- Race -->
			<generic_background name="raceframe">
				<bounds>125,90,140,30</bounds>
			</generic_background>
			<string_field name="race">
				<anchored to="raceframe" />
				<labelres>char_label_race</labelres>
			</string_field>
			<button_iadd_creation name="race_add">
				<anchored to="raceframe" position="insidetopright" offset="5,5" />
				<script>
					function onButtonPress()
						Interface.openWindow("masterindex", "race")
					end
				</script>
			</button_iadd_creation>
			<linkfield name="racelink">
				<anchored to="raceframe" position="insidetopright" offset="5,5" width="20" height="20" />
				<closetoggle />
				<invisible />
				<script>
					function onInit()
						onValueChanged();
					end
					function onValueChanged()
						if isEmpty() then
							setVisible(false);
						else
							setVisible(true);
						end
					end
				</script>
			</linkfield>

			<!-- Class / Level  -->
			<generic_background name="classframe">
				<bounds>275,90,-30,30</bounds>
			</generic_background>
			<string_field_charclasslevel name="classlevel">
				<anchored to="classframe" />
				<labelres>char_label_classlevelsummary</labelres>
			</string_field_charclasslevel>
			<button_iadd_creation name="class_add">
				<anchored to="classframe" position="insidetopright" offset="5,5" />
				<script>
					function onButtonPress()
						Interface.openWindow("masterindex", "class")
					end
				</script>
			</button_iadd_creation>
			<button_charclasslevel name="button_classlevel">
				<anchored to="classframe" position="insidetopright" offset="25,5" />
			</button_charclasslevel>

			<!-- Subwindows -->
			<subwindow name="main">
				<bounds>0,125,-1,-20</bounds>
				<class>charsheet_main</class>
			</subwindow>
			<subwindow name="skills">
				<bounds>0,125,-1,-20</bounds>
				<class>charsheet_skills</class>
			</subwindow>
			<subwindow name="abilities">
				<bounds>0,125,-1,-20</bounds>
				<class>charsheet_abilities</class>
			</subwindow>
			<subwindow name="inventory">
				<bounds>0,125,-1,-20</bounds>
				<class>charsheet_inventory</class>
			</subwindow>
			<subwindow name="notes">
				<bounds>0,125,-1,-20</bounds>
				<class>charsheet_notes</class>
			</subwindow>
			<subwindow name="actions">
				<bounds>0,125,-1,-20</bounds>
				<class>charsheet_actions</class>
			</subwindow>

			<tabs_charsheet name="tabs">
				<tab>
					<icon>tab_main</icon>
					<subwindow>main</subwindow>
				</tab>
				<tab>
					<icon>tab_skills</icon>
					<subwindow>skills</subwindow>
				</tab>
				<tab>
					<icon>tab_abilities</icon>
					<subwindow>abilities</subwindow>
				</tab>
				<tab>
					<icon>tab_inventory</icon>
					<subwindow>inventory</subwindow>
				</tab>
				<tab>
					<icon>tab_notes</icon>
					<subwindow>notes</subwindow>
				</tab>
				<tab>
					<icon>tab_actions</icon>
					<subwindow>actions</subwindow>
				</tab>
				<activate>1</activate>
			</tabs_charsheet>

			<resize_charsheet />
			<close_charsheet />
		</sheetdata>
	</windowclass>
</root>