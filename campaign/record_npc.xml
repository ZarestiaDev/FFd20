				<anchored position="insidetop" offset="0,30" />
				<class>spell_class</class>
				<npc />
				<script>
					function onInit()
						super.onInit();
						registerMenuItem(Interface.getString("menu_addspellclass"), "insert", 5);
					end
					
					function onMenuSelection(selection)
						if selection == 5 then
							window.addSpellClass();
						end
					end
				</script>
			</list_spellclass>
		</sheetdata>
