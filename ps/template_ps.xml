	</template>
	<template name="label_ps_skill">
		<label>
			<anchored to="skillanchor" width="22">
				<top />
				<left anchor="right" relation="relative" offset="8" />
			</anchored>
			<center />
		</label>
	</template>
	<template name="number_ps_skill">
		<number_ps_linked>
			<anchored to="skillanchor" width="22" height="20">
				<top />
				<left anchor="right" relation="relative" offset="8" />
			</anchored>
			<gmrollable2 />
			<script>
				function onInit()
					super.onInit();
					if not Session.IsHost then
						setEnabled(false);
					end
				end
				
				function action(draginfo)
					if not Session.IsHost then
						return false;
					end
					
					if skill then
						local rActor = ActorManager.resolveActor(window.link.getTargetDatabaseNode());
						local nValue;
						
						local sSkill = skill[1];
						local sSkillLookup = sSkill;
						local sSubSkill = nil;
						if subskill then
							sSubSkill = subskill[1];
							sSkill = sSkill .. " (" .. sSubSkill .. ")";
						end
						
						nValue = CharManager.getSkillValue(rActor, sSkillLookup, sSubSkill);

						ActionSkill.performPartySheetRoll(draginfo, rActor, sSkill, nValue);
						return true;
					end
					
					return false;
				end
				
				function onDragStart(button, x, y, draginfo)
					return action(draginfo);
				end
					
				function onDoubleClick(x,y)	
					return action();
				end
			</script>
		</number_ps_linked>
	</template>

	<template name="portrait_base">
		<genericcontrol>
			<icon>charlist_base</icon>
			<script>
				function onClickDown()
					if Session.IsHost then
						return true;
					end
				end
				
				function onClickRelease()
					if Session.IsHost then
						window.link.activate();
						return true;
					end
				end
			</script>
		</genericcontrol>
	</template>
	<template name="portrait">
		<genericcontrol>
			<disabled />
			<script>
				function onInit()
					update();
				end
				
				function update()
					local _,sCharNode = window.link.getValue();
					local sCharNodeName = sCharNode:match("%.([%w-]+)$");
					if sCharNodeName then
						setIcon("portrait_" .. sCharNodeName .. "_charlist");
					else
						setIcon();
					end
				end
			</script>
		</genericcontrol>
	</template>
</root>
